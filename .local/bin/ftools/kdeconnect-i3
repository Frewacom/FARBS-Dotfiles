#dbus-send \
#	--dest="org.freedesktop.DBus" \
#	/org/freedesktop/DBus \
#	org.freedesktop.DBus \
#	string:'org.kde.kdeconnect'

dbus-send \
	--dest="$DESTINATION" \
	--print-reply \
	/modules/kdeconnect/devices/"$DEVICE" \
	"$INTERFACE"

