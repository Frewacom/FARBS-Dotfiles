#!/bin/bash

NB=$(xgetres color0)
NF=$(xgetres color7)
SB=$(xgetres color2)

if [ "$1" = "dmenu_run" ]; then
	dmenu_run -fn "Noto Sans Black-9" -nb "$NB" -nf "$NF" -sb "$SB" -sf "#ffffff"
else
	IFS= read -d '' -n 1 PIPE
	while IFS= read -d '' -n 1 -t 2 c
	do
    		PIPE+=$c
	done

	printf "$PIPE" | dmenu -fn "Noto Sans Black-9" -nb "$NB" -nf "$NF" -sb "$SB" -sf "#ffffff" "$@"
fi

