if [ $# -lt 1 ]; then
	echo "Usage: themer <path-to-file>"
	exit
fi

setbg $1
wal -i $1
wal-steam -w

if [ "$2" = "no-reload" ]; then
	exit
fi

echo "To fully set the new theme we need to logout (It refreshes the i3bar with the new colors)"
read -p "Exit now? (Y/n)" EXIT

if [ "$EXIT" = "" ] || [ "$EXIT" = "Y" ]; then
	i3-msg exit
fi

