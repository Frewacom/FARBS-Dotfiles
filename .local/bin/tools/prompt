#!/bin/sh
# A dmenu binary prompt script.
# Gives a dmenu prompt labeled with $1 to perform command $2.
# For example:
# `./prompt "Do you want to shutdown?" "shutdown -h now"`

[ "$(printf "No\\nYes" | dmenu -i -fn "Noto Sans Black-9" -p "$1" -nb "$(xgetres critical)" -sb "$(xgetres criticalDark)" -sf "#ffffff" -nf "#ffffff")" = "Yes" ] && $2
