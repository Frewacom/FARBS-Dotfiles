#!/bin/sh
# Give dmenu list of all unicode characters to copy.
# Shows the selected character in dunst if running.

# Must have xclip installed to even show menu.
xclip -h >/dev/null || exit

NB="$(xgetres backgroundDark)"
NF="$(xgetres accentText)"
SB="$(xgetres accent)"
SF="#ffffff"
FONT="Noto Sans Bold-16"

if [ -e ~/.config/fontawesome ]; then
    chosen=$(grep -v "#" -h ~/.config/emoji ~/.config/fontawesome | dmenu -i -l 20 -fn "$FONT" -nb "$NB" -nf "$NF" -sb "$SB" -sf "$SF")
else
    chosen=$(grep -v "#" ~/.config/emoji | dmenu -i -l 20 -fn "$FONT" -nb "$NB" -nf "$NF" -sb "$SB" -sf "$SF")
fi

[ "$chosen" != "" ] || exit

c=$(echo "$chosen" | sed "s/ .*//")
echo "$s" | tr -d '\n' | xclip -selection clipboard
notify-send "'$s' copied to clipboard." &

s=$(echo "$chosen" | sed "s/.*; //" | awk '{print $1}')
echo "$c" | tr -d '\n' | xclip
notify-send "'$c' copied to primary." &
