#!/bin/sh

DATE=$(date '+%T, %a %d %b %Y   ')
echo "<span color='$WAL_LIGHT'>$DATE</span>" 

case $BLOCK_BUTTON in
	1) pgrep -x dunst >/dev/null && notify-send "ÔÅ≥ This Month" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")";;
	2) "$TERMINAL" -e calcurse -D ~/.config/calcurse
;;
esac


