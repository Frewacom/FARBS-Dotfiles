#!/bin/sh

filter() {
  [ "$(pidof dwmblocks)" ] && sed "/^volume:/d" | sed '1s/.*/ &/' | sed '2q' | sed -e "s/\\&/&amp;/g;s/\\[paused\\].*/\^c$(xgetres critical)^/g;s/\\[playing\\].*//" | tac | tr -d '\n' | sed '/./ s/$/^d^/'
	}

case $BLOCK_BUTTON in
    1) mpc toggle | filter & ;;  # left click, pause/unpause
    2) mpc status | filter && setsid "$TERMINAL" -e ncmpcpp & ;;  # right click, open ncmpcpp
    3) mpc status | filter && notify-send " Music module" "\- Shows mpd song playing.
- Left click opens ncmpcpp.
- Middle click pauses.
- Scroll changes track." &;;
    4) mpc prev   | filter & ;;  # scroll up, previous
    5) mpc next   | filter & ;;  # scroll down, next
    *) mpc status | filter & ;;
esac; exit

