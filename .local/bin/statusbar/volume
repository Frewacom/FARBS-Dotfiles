#!/bin/sh

case $BLOCK_BUTTON in
	# 1) setsid "$TERMINAL" -e alsamixer & ;;
	# 2) amixer sset Master toggle ;;
	# 4) amixer sset Master 5%+ >/dev/null 2>/dev/null ;;
	# 5) amixer sset Master 5%- >/dev/null 2>/dev/null ;;
	1) setsid "$TERMINAL" -e pulsemixer & ;;
	2) pamixer -t ;;
	4) pamixer -i 1 ;;
	5) pamixer -d 1 ;;
	3) notify-send " Volume module" "\- Shows volume ,,  if muted.
- Middle click to mute.
- Scroll to finely adjust volume."
esac

[ "$(pulsemixer --get-mute)" = "1" ] && echo "^c$(xgetres critical)^^d^" && exit

vol=$(pulsemixer --get-volume | awk '{print $1}')

if [ "$vol" -ge "50" ]; then
	icon=""
elif [ "$vol" -eq "0" ]; then
	icon=""
else
	icon=""
fi

echo "$icon $vol %"
