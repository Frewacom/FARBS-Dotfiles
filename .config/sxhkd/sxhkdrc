# Basic binds
super + Return
	i3-msg "split horizontal ;; exec --no-startup-id $TERMINAL"
super + d
	dmenu_launcher "dmenu_run"
super + r
	$TERMINAL -e $FILE
#super + e
#	$TERMINAL -e neomutt
#super + m
#	$TERMINAL -e ncmpcpp
super + i
	$TERMINAL -e htop
super + y
	$TERMINAL -e calcurse
super + shift + a
	$TERMINAL -e pulsemixer; pkill -RTMIN+10 $STATUSBAR
super + shift + c
	camtoggle
super + w

super + shift + w
	$BROWSER
super + shift + g
	gimp

# Et cetera...
super + grave
	dmenuunicode
super + Scroll_Lock
	killall screenkey || screenkey
super + Insert
	showclip
super + shift + e
	prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
	prompt "Reboot computer?" "sudo -A shutdown -r now"
XF86Launch1
	xset dpms force off

# Audio keys
XF86AudioMute
	amixer sset Master toggle; pkill -RTMIN+10 $STATUSBAR
XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-}; pkill -RTMIN+10 $STATUSBAR
XF86Audio{Next,Prev}
	mpc {next,prev}; pkill -RTMIN+11 $STATUSBAR; playerctl {next,previous}; pkill -RTMIN+11 $STATUSBAR
XF86Audio{Pause,Play,Stop}
	mpc {toggle,toggle,stop}; pkill -RTMIN+11 $STATUSBAR; playerctl {play-pause,play-pause,stop}; pkill -RTMIN+11 $STATUSBAR
XF86Audio{Rewind,Forward}
	mpc seek {-,+}10
XF86AudioRecord
	dmenurecord
XF86AudioMedia
	$TERMINAL -e ncmpcpp

# Brightness
XF86MonBrightnessDown
	xbacklight -dec 15
XF86MonBrightnessUp
	xbacklight -inc 15


# Recording
# Take screenshot
Print
  maim -s | xclip -selection clipboard -t image/png
# Pick screenshot type
shift + Print
	maimpick
# Record audio or video
super + Print
	maim pic-full-$(date '+%y%m%d-%H%M-%S').png
# kill active recording

#super + Delete
#	dmenurecord kill


# Pause audio
super + p
	mpc toggle
super + shift + p
	mpc pause; pauseallmpv
# Changes to next/previous tracks
super + {comma,period}
	mpc {prev,next}
# Restart track
super + shift + less
	mpc seek 0%

# These two are hardcoded to the F-keys that correspond to music forward/back on my keyboard... XF86Audio...commands can not be used with modifiers it seems
# Seek foward in song
shift + {_,control +}  F11
	mpc seek +{10,120}
# Seek backward in song
shift + {_,control +} F9
    mpc seek -{10,120}

# Toggle redshift
super + End
    pkill -USR1 "^redshift$"

# Function keys
# Show readme
super + F1
	groff -mom $HOME/.local/share/larbs/readme.mom -Tpdf | zathura -
# F2 is restart in i3 right now.
# Change display
super + F3
	displayselect
# Hibernate
super + F4
	prompt 'Hibernate computer?' 'sudo systemctl suspend'
# Restart/rescan wifi/eth networks
super + F5
	sudo -A systemctl restart NetworkManager
# Start torrent daemon/open interface
super + F6
	torwrap
# toggle torrent daemon
super + F7
	td-toggle
# sync email
super + F8
	mailsync
# Mount a USB drive or Android device
super + F9
	dmenumount
# Unmount a USB drive or Android device
super + F10
	dmenuumount
# Search with Duckduckgo
super + F11
	make-i3-config
# Network Manager interface
super + F12
	$TERMINAL -e sudo -A nmtui


